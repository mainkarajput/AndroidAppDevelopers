<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#e9f8ec">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your Aadhaar Number"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_aadhar_color">
        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:layout_marginTop="80dp"
            >

            <EditText
                android:id="@+id/editText1"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/border"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_toStartOf="@+id/editText2"
                android:layout_toLeftOf="@+id/editText2"
                android:gravity="center"
                android:hint="1 2 3 4"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="22dp"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="145dp"
                android:gravity="center"
                android:hint="5 6 7 8"
                android:background="@drawable/border"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="25sp" />
            <EditText
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id="@+id/editText3"
                android:layout_marginRight="20dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="9 0 1 2"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="25sp"
            />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/digi"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="10dp"
            android:textAlignment="viewStart"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"
            android:textColor="#FA716969"
            android:gravity="start" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:id="@+id/nxtbtn"

        android:layout_marginLeft="200dp"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="26dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="Next"
            android:textColor="#FFFF"
            android:textSize="18sp"
            android:textStyle="bold"> </TextView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">
        </Button>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/digi2"
       android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:textSize="16sp"
        android:textColor="#000000"/>



</RelativeLayout>